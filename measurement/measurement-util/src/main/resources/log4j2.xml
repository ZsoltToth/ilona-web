<?xml version="1.0" encoding="UTF-8"?>
<Configuration xmlns="http://logging.apache.org/log4j/2.0/config">

	<Appenders>
		<File name="ALL_LOGS_FILE" fileName="logs/ilona.log" append="true">
			<PatternLayout
				pattern="%-5p | %d{yyyy-MM-dd HH:mm:ss} | [%t] %C{2} (%F:%L) - %m%n" />
		</File>

		<File name="DAOLogFile" fileName="logs/ilonaPersistMysql.log" append="true">
			<PatternLayout
				pattern="%-5p | %d{yyyy-MM-dd HH:mm:ss} | [%t] %C{2} (%F:%L) - %m%n" />
		</File>

		<File name="ControllerLogFile" fileName="logs/ilonaController.log"
			append="true">
			<PatternLayout
				pattern="%-5p | %d{yyyy-MM-dd HH:mm:ss} | [%t] %C{2} (%F:%L) - %m%n" />
		</File>

		<File name="MODEL_LOG_FILE" fileName="logs/ilonaModel.log" append="true">
			<PatternLayout
				pattern="%-5p | %d{yyyy-MM-dd HH:mm:ss} | [%t] %C{2} (%F:%L) - %m%n" />
		</File>
		
			<File name="PositioningLogFile" fileName="logs/ilonaPositioning.log" append="true">
			<PatternLayout
				pattern="%-5p | %d{yyyy-MM-dd HH:mm:ss} | [%t] %C{2} (%F:%L) - %m%n" />
		</File>

		<Console name="STDOUT" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%-5p | %d{yyyy-MM-dd HH:mm:ss} | [%t] %C{2} (%F:%L) - %m%n" />
		</Console>
	</Appenders>

	<Loggers>

		<Logger name="uni.miskolc.ips.ilona.measurement.persist" level="info">
			<AppenderRef ref="STDOUT" />
			<AppenderRef ref="ALL_LOGS_FILE" />
			<AppenderRef ref="DAOLogFile" />
		</Logger>

		<Logger name="uni.miskolc.ips.ilona.measurement.controller" level="info">
			<AppenderRef ref="STDOUT" />
			<AppenderRef ref="ALL_LOGS_FILE" />
			<AppenderRef ref="ControllerLogFile" />
		</Logger>

		<Logger name="uni.miskolc.ips.ilona.measurement.model"
			level="info">
			<AppenderRef ref="STDOUT" />
			<AppenderRef ref="ALL_LOGS_FILE" />
			<AppenderRef ref="MODEL_LOG_FILE" />
		</Logger>
		
		<Root level= "info" >
			<AppenderRef ref="ALL_LOGS_FILE" level="error"/>
			<AppenderRef ref="STDOUT" level="warn" />
		</Root>

	</Loggers>

</Configuration>